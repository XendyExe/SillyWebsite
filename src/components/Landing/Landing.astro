---
import LandingContent from "./LandingContent.astro"
import LandingBackground from "./LandingBackground.astro"
---

<div class="landing-container-container">
    <div class="landing-container">
        <div class="landing-wrapper"> 
            <div class="landing">
                <LandingContent/>
            </div>
        </div>
    </div>
    <LandingBackground/>
</div>

<style>
    .landing-container-container {
        height: var(--landing-height);
		position:relative;
		border-bottom: solid #ffffff 10px;
        overflow: hidden;
    }
	.landing-container {
		width: 100%;
		height: var(--landing-height);
		margin: 0;
		padding: 0;
		display: flex;
		align-items: center;
	}
	.landing-wrapper {
		width: 100%;
		display: flex;
		justify-content: flex-end;
	}
	.landing {
		width: 50%; 
		display: flex;
		justify-content: center;
	}
</style>